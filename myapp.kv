#:kivy 1.0

<Label>:
    color: (0,0,0,1)

<GridLayout>:
    size: self.size

<BotaoGrande@Button>:
    font_size: '12sp'
    size_hint: None, None
    size: 400, 30

<Blank@Label>:
    size_hint_y: None
    height: 5

<Text_Label@Label>:
    size_hint_y: None
    height: 30

<Inputs_Padrao@TextInput>:
    size_hint_y: None
    height: 30

<Titulo@Label>:
    font_size: 22
    background_color: .77, 0, 0, 0.9
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    # Text Properties
    color: (1,1,1,1)
    bold: True
    #italic: True
    #outline_color: (0,0,1)
    #outline_width: 10

<ProjectName>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    rows: 2

    height: self.minimum_height
    Titulo:
        size_hint_y: None
        height: 40
        text: 'Levantamento Taquiométrico'

    GridLayout:
        cols: 2
        rows: 1
        GridLayout:
            cols: 1
            rows: 3

            GridLayout:
                size_hint_y: None
                height: 200
                cols: 3
                rows: 7
                padding: 10, 10
                spacing: 10, 0
                Blank:
                Blank:
                Blank:

                Text_Label:
                    text: 'Cota(RN): '
                Inputs_Padrao:
                    id: input_cota_rn
                    multiline: False
                Blank:

                Blank:
                Blank:
                Blank:

                Text_Label:
                    text: 'Alt. do Aparelho'
                Text_Label:
                    text: 'Estação'
                Text_Label:
                    text: 'Ponto Visado'

                Inputs_Padrao:
                    id: input_alt-aparelho
                    multiline: False
                Inputs_Padrao:
                    id: input_estacao
                    multiline: False
                Inputs_Padrao:
                    id: input_ponto-visado
                    multiline: False

                Text_Label:
                    text: 'Ângulo Horizontal'
                Blank:
                Text_Label:
                    text: 'Ângulo Vertical(Z)'

                Inputs_Padrao:
                    id: input_ang_horizontal
                    multiline: False
                Blank:
                Inputs_Padrao:
                    id: input_ang_vertical
                    multiline: False

            GridLayout:
                size_hint_y: None
                height: 30
                cols: 1
                rows: 1
                Titulo:
                    size_hint_y: None
                    height: 30
                    text: 'Leitura na mira'

            GridLayout:
                size_hint_y: None
                height: 140
                padding: 10, 10
                spacing: 10, 0
                cols: 3
                rows: 6

                Blank:
                Blank:
                Blank:

                Text_Label:
                    text: 'F. I.'
                    width: 200
                Text_Label:
                    text: 'F. M.'
                    width: 200
                Text_Label:
                    text: 'F. S.'
                    width: 200

                Inputs_Padrao:
                    id: input_f-i
                    multiline: False
                Inputs_Padrao:
                    id: input_f-m
                    multiline: False
                Inputs_Padrao:
                    id: input_f-s
                    multiline: False

                Blank:
                Blank:
                Blank:

                Blank:
                GridLayout:
                    size_hint_y: None
                    height: 70
                    padding: 10, 10
                    spacing: 10, 0
                    cols: 1
                    rows: 1
                    Button:
                        text: 'Adicionar'
                        background_color: 1.2, 0, 0, 0.9
                        canvas.before:
                            Color:
                                rgba:
                                    self.background_color
                        color: (1,1,1,1)
                        bold: True
                        on_release: root.adicionar_calculando()
                Blank:

        GridLayout:
            cols: 1
            rows: 2
            TextInput:
                id: textInp2
                multiline: True
                readonly: True
                background_color: 0.92,0.89,0.75,1
                on_focus: self.focus = False

            GridLayout:
                size_hint_y: None
                height: 70
                padding: 10, 10
                spacing: 10, 0
                cols: 3
                rows: 3

                Blank:
                Blank:
                Blank:

                Blank:
                Button:
                    text: 'Exportar'
                    background_color: 1.2, 0, 0, 0.9
                    canvas.before:
                        Color:
                            rgba:
                                self.background_color
                    color: (1,1,1,1)
                    bold: True

                Blank:

                Blank:
                Blank:
                Blank:
